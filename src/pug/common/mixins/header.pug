include _burg
include _nav

mixin header(navContent, navClass='')
    -var navClasses = "header__nav " + navClass
    header.header
        .header__content
            .container.header__content-row
                a.logo.header__logo(href="index.html" tabindex="-1")
                    img.logo__image-main(src="img/logo/logo_image.svg" alt="logo")
                    img.logo__image-text(src="img/logo/logo_text.svg" alt="logo")
                +nav('nav', navContent,'headNav')(class=navClasses)
                +burg('#headNav')(class="header-burg")
                .header__buttons
                    button.header__btn.btn.btn-border CONTACT US
                    button.header__btn.btn JOIN HYDRA